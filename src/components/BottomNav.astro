---
interface Props {
  active: 'today' | 'week' | 'history' | 'timer';
}

const { active } = Astro.props;
---

<nav class="fixed bottom-0 left-0 right-0 bg-[var(--color-bg)]/95 backdrop-blur border-t border-[var(--color-border)] pb-safe z-50">
  <div class="max-w-lg mx-auto flex justify-around py-2">
    <a
      href="/"
      class={`flex flex-col items-center gap-1 px-3 py-2 rounded-lg transition-colors ${active === 'today' ? 'text-lime' : 'text-[var(--color-text-muted)] hover:text-[var(--color-text)]'}`}
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
      </svg>
      <span class="text-[10px] font-mono">Today</span>
    </a>

    <a
      href="/week"
      class={`flex flex-col items-center gap-1 px-3 py-2 rounded-lg transition-colors ${active === 'week' ? 'text-lime' : 'text-[var(--color-text-muted)] hover:text-[var(--color-text)]'}`}
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
      </svg>
      <span class="text-[10px] font-mono">Week</span>
    </a>

    <a
      href="/history"
      class={`flex flex-col items-center gap-1 px-3 py-2 rounded-lg transition-colors ${active === 'history' ? 'text-lime' : 'text-[var(--color-text-muted)] hover:text-[var(--color-text)]'}`}
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <span class="text-[10px] font-mono">History</span>
    </a>

    <a
      href="/timer"
      class={`flex flex-col items-center gap-1 px-3 py-2 rounded-lg transition-colors ${active === 'timer' ? 'text-lime' : 'text-[var(--color-text-muted)] hover:text-[var(--color-text)]'}`}
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <span class="text-[10px] font-mono">Timer</span>
    </a>
  </div>
</nav>
