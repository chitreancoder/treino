---
interface Props {
  insight: string;
}

const { insight } = Astro.props;
---

<div class="relative p-4 rounded-xl bg-gradient-to-br from-[var(--color-lime)]/10 to-transparent border border-[var(--color-lime)]/20">
  <!-- AI indicator -->
  <div class="flex items-center gap-2 mb-2">
    <div class="w-5 h-5 rounded-md bg-lime flex items-center justify-center">
      <svg class="w-3 h-3 text-black" fill="currentColor" viewBox="0 0 24 24">
        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
      </svg>
    </div>
    <span class="font-mono text-xs text-lime uppercase tracking-wider">Claude's Take</span>
  </div>

  <!-- Insight text -->
  <p class="text-sm text-[var(--color-text)] leading-relaxed">
    {insight}
  </p>
</div>
